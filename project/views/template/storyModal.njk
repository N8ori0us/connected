                            <label for="password2">Confirm Password</label>
                            <input type="password" class="form-control" name="password2" id="password2" placeholder="Re-enter password" required/>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

