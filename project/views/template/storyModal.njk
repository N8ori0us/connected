{# STORY #}

<div class="modal fade" id="storyModal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Any experience strength and hope to share?</h2>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form>
                        {# <div class="form-group row"> #}
                        <div class="col form-group">
                            <label class="row form-label" for="story" >What's your story?</label>
                        </div>
                        <div class="col form-group">
                            <textarea type="text" class="form-control" placeholder="How it was. Wht brought you here. How it is now."></textarea>
                        </div>
                        <div class="row form-group">
                            <div class="col form-group">
                                <label for="postTo">Post where?</label>
                            </div>
                            <div class="col form-group ml-auto">
                                <div class="row">
                                    <input type="checkbox" name="postTo" id="my" value="My Page" /><label for="my">My Page</label>
                                </div>

                                <div class="row">
                                    <input type="checkbox" name="postTo" id="main" value="Main Page" /><label for="main">Main Page</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{# DETAILS #}

<div class="modal fade" id="detailModal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Profile Details</h2>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <h1 align="center"></h1>
                    <form enctype="multipart/form-data">
                        <div class="form-group">
                            <legend>Profile Pic</legend>
                            <div>
                                <label for="avatar">Upload Your Image:</label>
                                <input type="file" accept="image/*" class="form-control-file" id="avatar" name="avatar"
                                {# action="{{ url_for('views.upload', where='profile') }}"  #}
                                onchange="loadFile(event)"/>
                                <img id="output" width="200" remember="True"/>
                            </div>
                            <div class="form_group">
                                <p>Save file as:<input class="form-control" type="text" name="name" id="name" ></p>
                            </div>
                            <p>Image Preview:</p>
                        </div>
                        <div class="form-group">
                            <div class="form-control-group">
                                <label for="first_name">First Name</label>
                                <input type="text" class="form-control" name="first_name" id="first_name" placeholder={% if profile %}"profile.first_name"{% endif %}"What your first name?"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-control-group">
                                <label for="last_name">Last Name</label>
                                <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Last name?"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-control-group">
                                <label for="bio">Bio</label>
                                <input type="text" class="form-control" name="bio" id="bio" placeholder="Something about yourself"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-control-group">
                                <div class="col-lg-6">
                                    <table class="table table-responsive ">
                                        <tbody>
                                            <thead>Birthday</thead>
                                            <td><input type="integer" class="form-control" name="mo" id="mo" placeholder="MM"/></td>
                                            <td><input type="integer" class="form-control" name="day" id="day" placeholder="DD"/></td>
                                            <td><input type="integer" class="form-control" name="yr" id="yr" placeholder="YYYY"/></td>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

